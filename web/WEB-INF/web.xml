<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>com.dmr.project.controller.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestFormHandling</servlet-name>
        <servlet-class>com.dmr.project.controller.RequestFormHandling</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.dmr.project.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomePage</servlet-name>
        <servlet-class>com.dmr.project.controller.AdminHomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDMRRequest</servlet-name>
        <servlet-class>com.dmr.project.controller.AdminDMRRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestAcceptor</servlet-name>
        <servlet-class>com.dmr.project.controller.RequestAcceptor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurrentUsageServlet</servlet-name>
        <servlet-class>com.dmr.project.controller.CurrentUsageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutHandler</servlet-name>
        <servlet-class>com.dmr.project.controller.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsageHistoryServlet</servlet-name>
        <servlet-class>com.dmr.project.controller.UsageHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/LoginHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestFormHandling</servlet-name>
        <url-pattern>/RequestFormHandling</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomePage</servlet-name>
        <url-pattern>/AdminHomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDMRRequest</servlet-name>
        <url-pattern>/AdminDMRRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestAcceptor</servlet-name>
        <url-pattern>/RequestAcceptor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrentUsageServlet</servlet-name>
        <url-pattern>/CurrentUsageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutHandler</servlet-name>
        <url-pattern>/LogoutHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsageHistoryServlet</servlet-name>
        <url-pattern>/UsageHistoryServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
